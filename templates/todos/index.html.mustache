<section class="page">
  
  <header>
    <h1>{{{ title }}}</h1>
    <nav>
      <ul>
        <li class="filter">
          <a href="#">Filter</a>
        </li>
        <li class="new">
          <a href="#"><span>+</span> New</a>
        </li>
      </ul>
    </nav>    
  </header>
  
  <div class="body">
  
    <section id="todos" class="full">
      <ul class="checkbox_list">
    
        {{# todos }}

          {{# separator }}
            <li class="separator">
              <div class="title">
                <span class="toggle_all_below">
                  Future
                </span>
              </div>
            </li>
          {{/ separator }}

          {{^ separator }}
            <li class="{{{ checked_attribute }}}">
              <input type="checkbox" {{{ checked_attribute }}}>
              <a class="title" href="#todos/show/{{{ id }}}">{{{ title }}}</a>
            </li>
          {{/ separator }}

        {{/ todos }}
    
      </ul>
    </section>
  
  </div>
  
</section>


